        // íƒ€ì´ë¨¸ ì„¤ì •
        const timerGroup = form.createDiv('form-group');
        const timerCheckbox = timerGroup.createEl('input', { type: 'checkbox' });
        timerCheckbox.checked = true;
        timerGroup.createEl('label', { text: 'íƒ€ì´ë¨¸ ì‚¬ìš©' });
        
        const timerTimeGroup = form.createDiv('form-group');
        timerTimeGroup.createEl('label', { text: 'ë¬¸ì œë‹¹ ì‹œê°„ (ì´ˆ)' });
        const timerInput = timerTimeGroup.createEl('input', { 
            type: 'number', 
            value: '30',
            attr: { min: '5', max: '300' }
        });
        
        timerCheckbox.onchange = () => {
            timerInput.disabled = !timerCheckbox.checked;
        };
        
        // ì„ê¸° ì˜µì…˜
        const shuffleGroup = form.createDiv('form-group');
        const shuffleQuestionsCheckbox = shuffleGroup.createEl('input', { type: 'checkbox' });
        shuffleQuestionsCheckbox.checked = true;
        shuffleGroup.createEl('label', { text: 'ë¬¸ì œ ìˆœì„œ ì„ê¸°' });
        
        const shuffleOptionsGroup = form.createDiv('form-group');
        const shuffleOptionsCheckbox = shuffleOptionsGroup.createEl('input', { type: 'checkbox' });
        shuffleOptionsCheckbox.checked = true;
        shuffleOptionsGroup.createEl('label', { text: 'ì„ íƒì§€ ìˆœì„œ ì„ê¸°' });
        
        // ì˜¤ë‹µ ë¬¸ì œë§Œ ë³´ê¸°
        const wrongOnlyGroup = form.createDiv('form-group');
        const wrongOnlyCheckbox = wrongOnlyGroup.createEl('input', { type: 'checkbox' });
        wrongOnlyGroup.createEl('label', { text: 'ì˜¤ë‹µ ë¬¸ì œë§Œ í’€ê¸°' });
        
        wrongOnlyCheckbox.onchange = () => {
            const wrongQuestions = folderQuestions.filter(q => q.wrongCount > 0);
            const available = wrongOnlyCheckbox.checked 
                ? (difficultySelect.value === 'all' 
                    ? wrongQuestions.length 
                    : wrongQuestions.filter(q => q.difficulty === difficultySelect.value).length)
                : (difficultySelect.value === 'all' 
                    ? folderQuestions.length 
                    : folderQuestions.filter(q => q.difficulty === difficultySelect.value).length);
            
            countInput.max = available.toString();
            countInput.value = Math.min(parseInt(countInput.value), available).toString();
            stats.empty();
            stats.createEl('p', { text: `ì‚¬ìš© ê°€ëŠ¥í•œ ë¬¸ì œ: ${available}ê°œ` });
        };
        
        // ë‚œì´ë„ ë³€ê²½ ì‹œ ë¬¸ì œ ìˆ˜ ì—…ë°ì´íŠ¸
        difficultySelect.onchange = () => {
            const difficulty = difficultySelect.value;
            let available;
            
            if (wrongOnlyCheckbox.checked) {
                const wrongQuestions = folderQuestions.filter(q => q.wrongCount > 0);
                available = difficulty === 'all' 
                    ? wrongQuestions.length 
                    : wrongQuestions.filter(q => q.difficulty === difficulty).length;
            } else {
                available = difficulty === 'all' 
                    ? folderQuestions.length 
                    : folderQuestions.filter(q => q.difficulty === difficulty).length;
            }
            
            countInput.max = available.toString();
            countInput.value = Math.min(parseInt(countInput.value), available).toString();
            stats.empty();
            stats.createEl('p', { text: `ì‚¬ìš© ê°€ëŠ¥í•œ ë¬¸ì œ: ${available}ê°œ` });
        };
        
        // ë²„íŠ¼
        const btnGroup = form.createDiv('form-buttons');
        
        const startBtn = btnGroup.createEl('button', { text: 'í€´ì¦ˆ ì‹œì‘', cls: 'mod-cta' });
        startBtn.onclick = () => {
            const difficulty = difficultySelect.value;
            const count = parseInt(countInput.value);
            const wrongOnly = wrongOnlyCheckbox.checked;
            
            let selectedQuestions = [...folderQuestions];
            
            // ì˜¤ë‹µë§Œ í•„í„°ë§
            if (wrongOnly) {
                selectedQuestions = selectedQuestions.filter(q => q.wrongCount > 0);
            }
            
            // ë‚œì´ë„ í•„í„°ë§
            if (difficulty !== 'all') {
                selectedQuestions = selectedQuestions.filter(q => q.difficulty === difficulty);
            }
            
            if (selectedQuestions.length === 0) {
                new Notice('âŒ ì„ íƒí•œ ì¡°ê±´ì— ë§ëŠ” ë¬¸ì œê°€ ì—†ìŠµë‹ˆë‹¤');
                return;
            }
            
            // ë¬¸ì œ ìˆ˜ë§Œí¼ ëœë¤ ì„ íƒ
            if (selectedQuestions.length > count) {
                selectedQuestions = selectedQuestions.sort(() => Math.random() - 0.5).slice(0, count);
            }
            
            const quizOptions = {
                enableTimer: timerCheckbox.checked,
                timerPerQuestion: parseInt(timerInput.value),
                shuffleQuestions: shuffleQuestionsCheckbox.checked,
                shuffleOptions: shuffleOptionsCheckbox.checked
            };
            
            this.close();
            new QuizModal(this.app, this.plugin, selectedQuestions, quizOptions).open();
        };
        
        const cancelBtn = btnGroup.createEl('button', { text: 'ì·¨ì†Œ' });
        cancelBtn.onclick = () => this.close();
    }

    onClose() {
        const { contentEl } = this;
        contentEl.empty();
    }
}
