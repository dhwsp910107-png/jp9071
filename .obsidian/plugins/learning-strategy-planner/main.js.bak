                                    img.style.cssText = `max-width: ${imageWidth || '250px'}; margin: 8px 0; border-radius: 5px; cursor: pointer;`;
                                    img.onclick = () => this.showImageZoom(imageUrl, 'ë…¸íŠ¸ ì´ë¯¸ì§€');
                                }
