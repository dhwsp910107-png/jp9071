            height: 50px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 10001;
        `;
        
        const closeOverlay = () => {
            overlay.remove();
            document.removeEventListener('keydown', handleEscape);
        };
        
        closeBtn.onclick = (e) => {
            e.stopPropagation();
            closeOverlay();
        };
        
        overlay.onclick = closeOverlay;
        imgContainer.onclick = (e) => e.stopPropagation();
        
        const handleEscape = (e) => {
            if (e.key === 'Escape') {
                e.stopPropagation();
                e.preventDefault();
                closeOverlay();
            }
        };
        document.addEventListener('keydown', handleEscape, true);
    }

    onOpen() {
        const { contentEl } = this;
        contentEl.empty();
        contentEl.addClass('quiz-modal');
        
        if (this.questions.length === 0) {
            contentEl.createEl('h2', { text: 'í€´ì¦ˆ ì—†ìŒ' });
            contentEl.createEl('p', { text: 'í‘œì‹œí•  ë¬¸ì œê°€ ì—†ìŠµë‹ˆë‹¤.' });
            const closeBtn = contentEl.createEl('button', { text: 'ë‹«ê¸°', cls: 'mod-cta' });
            closeBtn.onclick = () => this.close();
            return;
        }
        
        if (this.options.shuffleQuestions) {
            this.questions = this.shuffleArray(this.questions);
        }
        
        this.showQuestion();
    }

    showQuestion() {
        const { contentEl } = this;
        contentEl.empty();
        
        const question = this.questions[this.currentIndex];
        if (!question) {
            this.showResults();
            return;
        }
        
        // í—¤ë”
        const header = contentEl.createDiv('quiz-header');
        header.createEl('span', { text: `ë¬¸ì œ ${this.currentIndex + 1}/${this.questions.length}` });
        
        const pauseBtn = header.createEl('button', { text: this.isPaused ? 'â–¶ï¸ ê³„ì†' : 'â¸ï¸ ì¼ì‹œì •ì§€', cls: 'quiz-pause-btn' });
        pauseBtn.onclick = () => this.togglePause();
        
        // íƒ€ì´ë¨¸
        if (this.options.enableTimer) {
            const timerEl = header.createEl('span', { cls: 'quiz-timer' });
            this.updateTimer(timerEl);
            
            if (!this.timerInterval) {
                this.timerInterval = setInterval(() => {
                    if (!this.isPaused) {
                        this.timeLeft--;
                        this.updateTimer(timerEl);
                        
                        if (this.timeLeft <= 0) {
                            this.selectAnswer(null, true);
                        }
                    }
                }, 1000);
            }
        }
        
        // ë¬¸ì œ
        const questionEl = contentEl.createDiv('quiz-question');
        if (question.hanzi) {
            questionEl.createEl('h2', { text: question.hanzi, cls: 'quiz-hanzi' });
        }
        if (question.question) {
            questionEl.createEl('p', { text: question.question });
        }
        
        // ë¬¸ì œ ì´ë¯¸ì§€
        if (question.image && question.image.trim()) {
            const imageDiv = questionEl.createDiv('quiz-image-container');
            imageDiv.style.cssText = 'margin: 10px 0;';
            
            const lines = question.image.split('\n').filter(l => l.trim());
            for (const line of lines) {
                let imageUrl = line.trim();
                let imageWidth = null;
                
                // í¬ê¸° ì •ë³´ ì¶”ì¶œ (ì˜ˆ: ![[image.png|400]])
                const sizeMatch = line.match(/\|(\d+)\]\]/);
                if (sizeMatch) {
                    imageWidth = sizeMatch[1] + 'px';
                }
                
                // Wiki ë§í¬ í˜•ì‹ ì²˜ë¦¬
                if (imageUrl.includes('[[') && imageUrl.includes(']]')) {
                    const match = imageUrl.match(/!\[\[(.+?)(\|\d+)?\]\]/);
                    if (match && match[1]) {
                        let imagePath = match[1];
                        const folderName = question.folder || 'ê¸°ë³¸';
                        const attachmentFolderName = 'ì²¨ë¶€íŒŒì¼';
                        const quizFolder = `${this.plugin.settings.clozeFolder}/QuizQuestions`;
                        
                        // ì´ë¯¸ì§€ ê²½ë¡œê°€ í´ë”ëª…ìœ¼ë¡œ ì‹œì‘í•˜ëŠ” ê²½ìš° (ìƒëŒ€ ê²½ë¡œ)
                        if (imagePath.startsWith(folderName + '/')) {
                            imagePath = `${quizFolder}/${imagePath}`;
                        }
                        // ì´ë¯¸ì§€ ê²½ë¡œê°€ í€´ì¦ˆ í´ë”ë¡œ ì‹œì‘í•˜ì§€ ì•ŠëŠ” ê²½ìš°
                        else if (!imagePath.startsWith(quizFolder)) {
                            // íŒŒì¼ëª…ë§Œ ìˆëŠ” ê²½ìš°
                            if (!imagePath.includes('/')) {
                                imagePath = `${quizFolder}/${folderName}/${attachmentFolderName}/${imagePath}`;
                            }
                        }
                        
                        const file = this.app.vault.getAbstractFileByPath(imagePath);
