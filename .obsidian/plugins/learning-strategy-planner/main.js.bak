                const folderData = folderMap[folderPath];
                const folderName = folderPath.split('/').pop() || 'ë£¨íŠ¸';
                const currentCard = this.settings.cardNumbersByFolder[folderPath] || 1;
                
                content += `## ğŸ“ ${folderName}\n\n`;
