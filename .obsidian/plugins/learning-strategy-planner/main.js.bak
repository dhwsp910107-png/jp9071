        if (updatedQuestion) {
            updatedQuestion.bookmarked = !updatedQuestion.bookmarked;
            await this.saveQuestion(updatedQuestion, false);
            new Notice(updatedQuestion.bookmarked ? 'â­ ë¶ë§ˆí¬ ì¶”ê°€' : 'ë¶ë§ˆí¬ ì œê±°');
            return updatedQuestion.bookmarked;
