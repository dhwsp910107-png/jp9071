                                    if (!imagePath.includes('/')) {
                                        imagePath = `${quizFolder}/${folderName}/ì²¨ë¶€íŒŒì¼/${imagePath}`;
                                    }
                                }
                                
                                const file = this.app.vault.getAbstractFileByPath(imagePath);
                                if (file) {
                                    imageUrl = this.app.vault.adapter.getResourcePath(file.path);
