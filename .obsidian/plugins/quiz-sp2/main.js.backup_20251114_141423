                transform: translateX(5px);
            }
            
            /* ëª¨ë°”ì¼ ë°˜ì‘í˜• */
            @media (max-width: 768px) {
                .hanzi-quiz-dashboard {
                    padding: 12px;
                }
                .stats-grid {
                    grid-template-columns: repeat(2, 1fr);
                    gap: 10px;
                }
                .stat-card {
                    padding: 15px;
                    min-height: 44px;
                }
                .stat-icon {
                    font-size: 24px;
                }
                .stat-value {
                    font-size: 20px;
                }
                .actions-grid {
                    grid-template-columns: 1fr;
