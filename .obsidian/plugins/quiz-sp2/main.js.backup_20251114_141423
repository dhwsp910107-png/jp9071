            enabled: true
        },
        {
            id: 'timer',
            title: 'âš™ï¸ ì„¤ì •',
            icon: 'settings',
            action: 'timer',
            enabled: true
        },
        {
            id: 'edit',
            title: 'âœï¸ í¸ì§‘',
            icon: 'pencil',
            action: 'edit',
            enabled: true
        },
        {
            id: 'delete',
            title: 'ğŸ—‘ï¸ ì‚­ì œ',
            icon: 'trash',
            action: 'delete',
            enabled: true
