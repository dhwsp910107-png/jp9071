                    flex-direction: column;
                    align-items: flex-start;
                    gap: 8px;
                }

                .subjective-qa-modal .paste-btn {
                    width: 100%;
                    padding: 10px 14px;
                }

                .subjective-qa-modal .form-row {
                    flex-direction: column;
                    gap: 0;
                }

                .subjective-qa-modal .button-area {
                    flex-direction: column;
                    padding: 20px;
                }

                .subjective-qa-modal .button-area button {
